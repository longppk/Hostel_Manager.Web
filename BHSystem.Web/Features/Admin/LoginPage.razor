@page "/Admin/Login"
@layout BHSystem.Web.Shared.LoginLayout;

<div class="row mx-0">
    <div class="col-lg-4 col md-6 col-sm-10" style="margin: 0 auto;">
        <div class="card" style="">
            <div class="mt-2" style="margin: 0 auto;">
                <div class="d-flex align-items-center text-decoration-none">
                    <img src="../images/logo.png" width="110" height="32" alt="HSystem" class="navbar-brand-image">
                    <span class="bh-logo__title">Đăng nhập</span>
                </div>
            </div>
            <div class="card-body" >
                <EditForm Model="LoginRequest" OnValidSubmit="@(()=> LoginHandler())">
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                    @if(!string.IsNullOrWhiteSpace(ErrorMessage))
                    {
                        <ul class="validation-errors">
                            <li class="validation-message">
                                @ErrorMessage
                            </li>
                        </ul>
                    }
                    <div style="text-align: center;">
                        <TelerikLoader Visible="@IsLoading" Type="@LoaderType.Pulsing" Size="@(ThemeConstants.Loader.Size.Medium)"></TelerikLoader>
                    </div>
                    <div class="mt-2">
                        <BHLabel Value="Tên đăng nhập:" IsRequired="true" />
                        <TelerikTextBox PlaceHolder="Tài khoản*:"  @bind-Value="@LoginRequest.UserName" Id="txtUserName" />
                        <BHValidationTooltip ValidationFor="@(()=> LoginRequest.UserName)" Id="txtUserName" />
                    </div>
                    <div class="mt-2">
                        <BHLabel Value="Mật khẩu:" IsRequired="true" />
                        <TelerikTextBox Id="txtPassword" 
                            PlaceHolder="Mật khẩu*:" @bind-Value="@LoginRequest.Password" Password="true" />
                        <BHValidationTooltip ValidationFor="@(()=> LoginRequest.Password)" Id="txtPassword" />
                    </div>
                    <div class="mt-2">
                        <TelerikButton ButtonType="@Telerik.Blazor.ButtonType.Submit" IconClass="fa-solid fa-key"
                                       ThemeColor="@(ThemeConstants.Button.ThemeColor.Primary)">
                            Đăng nhập
                        </TelerikButton>
                    </div>
                </EditForm>
                
            </div>
        </div>
    </div>
</div>
