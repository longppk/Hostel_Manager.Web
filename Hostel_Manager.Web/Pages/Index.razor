@page "/"
@using Hostel_Manager.Models.Dtos;
@inherits HostelBase


<link rel="stylesheet" href="./css/index.css" />
<link rel="stylesheet" href="./css/main.css" />
<body>

  <!--Banner-->
  <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/img/carousel-1.jpg" class="d-block w-100 img-carousel" alt="...">
        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
          <h2 class="text-uppercase d-block">help you find hostels quickly</h2>
            <a class="btn-register text-uppercase d-block mt-5 p-3 fw-bold text-decoration-none" href="../html/Login.html">Register an account now</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="/img/carousel-2.jpg" class="d-block w-100 img-carousel" alt="...">
        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
          <h2 class="text-uppercase">Security - Safe</h2>
          <a class="btn-register text-uppercase d-block mt-5 p-3 fw-bold text-decoration-none" href="../html/Login.html">Register an account now</a>
        </div>
      </div>
      <div class="carousel-item">
        <img src="/img/carousel-3.jpg" class="d-block w-100 img-carousel" alt="...">
        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
          <h2 class="text-uppercase">Please quickly register an account to experience</h2>
          <a class="btn-register text-uppercase d-block mt-5 p-3 fw-bold text-decoration-none" href="../html/Login.html">Register an account now</a>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <!--end banner-->
  <!--Find-->
  <div class="container-fluid pb-5 booking">
    <div class="container d-flex justify-content-center col-10 col-lg-12 p-4 bg-white shadow">
      <div class="bg-white col-12 p-0 d-flex justify-content-center flex-column flex-lg-row">
        <select class="col-12 col-lg-2 mx-2 p-0 select my-2 my-lg-0" name="" id="province">
          <option value="">Chọn tỉnh</option>
        </select>
        <select class="col-12 col-lg-2 mx-2 p-0 select my-2 my-lg-0" name="" id="province">
          <option value="">Chọn tỉnh</option>
        </select>
        <select class="col-12 col-lg-2 mx-2 p-0 select my-2 my-lg-0" name="" id="district">
          <option value="">chọn quận</option>
        </select>
        <select class="col-12 col-lg-2 mx-2 p-0 select my-2 my-lg-0" name="" id="ward">
          <option value="">chọn phường</option>
        </select>
        <div class="col-12 col-lg-1 p-0 justify-content-start mx-2 my-2 my-lg-0">
          <button class="w-100 btn-find">Find</button>
        </div>
      </div>
    </div>
  </div>
  <!--end Find-->
  <!--Room-->
  <div class="container-xxl py-5 container-room">
    <div class="container">
      <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
        <h6 class="section-title text-center text-primary text-uppercase">Our Rooms</h6>
        <h1 class="mb-5">Explore Our <span class="text-primary text-uppercase">Rooms</span></h1>
      </div>
            <div class="row g-4">
            @if (Hostels == null)
            {
                <h3>Loading Hostels....</h3>
            }
            else
            {
                @foreach (var item in Hostels)
                {
                    <div class="col-lg-4 col-md-6 item-hover">
                        <div class="room-item shadow rounded overflow-hidden">
                            <div class="position-relative text-center">
                                <a href=""><img class="" style="height:200px; width:300px" src="@item.Image_Hostel" alt=""></a>
                            </div>
                            <div class="p-3 mt-2">
                                <div class="info py-2">
                                    <span><i class="fa-solid fa-user pe-2"></i>Owner: <a class="text-decoration-none fw-bold text-dark" href="">@item.OwnerHostel</a></span>
                                </div>
                                <div class="d-flex mb-2">
                                    <h5 class="mb-0 border-end pe-4 ">Junior Suite</h5>
                                    <div class="ps-2">
                                        <small>Rating:</small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                        <small class="fa fa-star text-primary"></small>
                                    </div>
                                </div>
                                <div class="d-flex mb-2">
                                    <small class="border-end me-3 pe-5">
                                        <i class="fa-solid fa-square-parking text-primary me-2"></i>Parking:@item.Parking
                                    </small>
                                    <small><i class="fa fa-wifi text-primary me-2"></i>Wifi: </small>
                                </div>
                                <div class="d-flex flex-column mt-2">
                                    <small><i class="fa-solid fa-location-dot text-primary"></i><span class="p-2">Location</span></small>
                                    <span>City: <small class="fw-bold">@item.City</small></span>
                                    <span>District: <small class="fw-bold">@item.District</small></span>
                                    <span>Ward: <small class="fw-bold">@item.Ward</small></span>
                                    <span>Detail: <small class="fw-bold">@item.Detail</small></span>
                                </div>
                                <p class="text-body mb-3">dklamkslafmlmdfmlfdllfd</p>
                                <div class="d-flex justify-content-between">
                                    <a class="btn py-2 px-4 px-sm-2 view-detail" href="../html/detail_room.html">View Detail</a>
                                    <a class="btn py-2 px-5 px-sm-3 btn-contact" href="">Contact</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            </div>
           
    </div>
  </div>
  <!--End Room-->
  <!--Notification-->
  <div class="container mt-5 notification">
    <div class="row justify-content-center">
        <div class="col-lg-10 p-0 container-notification">
            <div class="text-center">
                <div class="bg-dark text-center p-5">
                    <h4 class="mb-4 text-capitalize text-white">Receive the latest notifications from us when rooms are available</h4>
                    <div class="position-relative mx-auto" style="max-width: 400px;">
                        <input class="form-control w-100 py-3 ps-4 pe-5" type="text" placeholder="Enter your email">
                        <button type="button" class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
  <!--end-Notification-->

  <!--Footer-->
<footer class="container-fluid bg-dark text-light footer">
    <div class="container pb-5">
        <div class="row g-5">
            <div class="col-md-6 col-lg-4">
                <div class="bg-primary p-3 text-center">
                  <a href="index.html" class="text-white text-decoration-none text-uppercase fw-bold fs-3 logo-footer">Hostel</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <h6 class="section-title text-start text-primary text-uppercase mb-4">Contact</h6>
                <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i> Street 3/2, Ninh Kieu, Can Tho</p>
                <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>0123456789</p>
                <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@example.com</p>
                <div class="d-flex pt-2">
                    <a class="btn btn-outline-light btn-social" href="https://youtube.com/freewebsitecode"><i class="fab fa-youtube"></i></a>
                    <a class="btn btn-outline-light btn-social" href="https://freewebsitecode.com"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
            <div class="col-lg-5 col-md-12">
                <div class="row gy-5 g-4">
                    <div class="col-md-6">
                        <h6 class="section-title text-start text-primary text-uppercase mb-3">Company</h6>
                        <a class="btn btn-link text-decoration-none text-white" href="">Contact Us</a>
                        <a class="btn btn-link text-decoration-none text-white" href="">Privacy Policy</a>
